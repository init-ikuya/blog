---
import astroLogo from "../assets/astro.svg";
import background from "../assets/background.svg";
const allPosts = await Astro.glob("../pages/posts/*.md");
// Extract tag list automatically from posts
const tagSet = new Set();
allPosts.forEach((post) => {
  if (Array.isArray(post.frontmatter.tags)) {
    post.frontmatter.tags.forEach((tag) => tagSet.add(tag));
  }
});
const allTags = Array.from(tagSet);
---

<div id="main-layout">
  <div id="left-column">
    <div class="profile-box">
      <a
        href="https://github.com/init-ikuya"
        target="_blank"
        rel="noopener noreferrer"
      >
        <img
          src="https://github.com/init-ikuya.png"
          alt="init-ikuya GitHub"
          class="github-avatar"
        />
      </a>
    </div>
    <div class="desc-box">
      <h1>Welcome to init-ikuya's Blog !!</h1>
      <p>
        This is a blog by a web developer, sharing my own projects, insights
        I've gained, and also stories about my hobbies and travels.<br />
        Stay tuned for updates!
      </p>
    </div>
    <section id="news-section" class="box">
      <h2>News & Updates</h2>
      <ul>
        <li>2025-06-16: Launched this blog!</li>
      </ul>
    </section>
  </div>
  <div id="right-column">
    <section id="posts-section" class="box">
      <div class="posts-header">
        <h2>Posts</h2>
        <a href="/blog/posts" class="posts-link">See more â†’</a>
      </div>
      <ul class="posts-list">
        {
          allPosts
            .sort(
              (a, b) =>
                new Date(b.frontmatter.pubDate).getTime() -
                new Date(a.frontmatter.pubDate).getTime()
            )
            .slice(0, 5)
            .map((post) => (
              <li>
                <span class="post-date">
                  {new Date(post.frontmatter.pubDate)
                    .toISOString()
                    .slice(0, 10)}
                </span>
                <a href={post.url} class="post-title">
                  {post.frontmatter.title}
                </a>
              </li>
            ))
        }
      </ul>
    </section>
    <section id="tags-section" class="box">
      <h2>Tags</h2>
      <div id="tags">
        {
          allTags.length === 0 ? (
            <span>No tags yet!</span>
          ) : (
            allTags.map((tag) => <a href={`/tags/${tag}`}>#{tag}</a>)
          )
        }
      </div>
    </section>
    <section id="projects-section" class="box">
      <h2>Projects</h2>
      <div class="projects-coming">Coming soon...</div>
    </section>
  </div>
</div>

<style>
  #main-layout {
    display: flex;
    flex-direction: row;
    gap: 36px;
    justify-content: center;
    align-items: flex-start;
    margin-top: 32px;
    flex-wrap: nowrap;
    min-width: 900px;
    width: 100%;
    box-sizing: border-box;
    overflow-x: auto;
  }
  #left-column,
  #right-column {
    display: flex;
    flex-direction: column;
    gap: 24px;
    min-width: 260px;
    max-width: 420px;
    flex: 1 1 260px;
  }
  #right-column {
    max-width: 420px;
    flex: 1 1 320px;
  }
  .profile-box {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 8px;
  }
  .github-avatar {
    margin-top: 16px;
    width: 96px;
    height: 96px;
    border-radius: 50%;
    border: 3px solid #39ff14;
    box-shadow: 0 2px 12px #39ff14;
    transition: transform 0.3s;
  }
  .github-avatar:hover {
    transform: scale(1.08) rotate(-8deg);
    box-shadow: 0 4px 24px #39ff14;
  }
  .desc-box h1 {
    font-size: 22px;
    margin-top: 0.25em;
    color: #39ff14;
    text-shadow: 0 2px 8px #111;
  }
  .desc-box p {
    color: #39ff14;
    font-size: 16px;
    line-height: 24px;
    letter-spacing: -0.006em;
    margin: 0;
  }
  .box {
    padding: 16px;
    background: transparent;
    border-radius: 16px;
    border: 2px solid #39ff14;
    color: #39ff14;
    box-shadow: 0 2px 8px #39ff1440;
  }
  h2 {
    margin: 0 0 1em;
    font-weight: normal;
    color: #39ff14;
    font-size: 20px;
  }
  #news-section ul {
    margin: 0;
    padding-left: 1.2em;
    color: #39ff14;
    font-size: 15px;
  }
  #tags {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 8px;
  }
  #tags a {
    display: inline-block;
    color: #39ff14;
    border-radius: 8px;
    padding: 6px 12px;
    font-size: 15px;
    text-decoration: none;
    border: 2px solid #39ff14;
    transition:
      background 0.2s,
      color 0.2s;
  }
  #tags a:hover {
    background: #39ff14;
    color: #111827;
  }
  #posts-section .posts-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
  }
  .posts-link {
    color: #39ff14;
    font-size: 14px;
    text-decoration: underline;
    font-weight: bold;
    transition: color 0.2s;
  }
  .posts-link:hover {
    color: #111827;
    background: #39ff14;
    border-radius: 6px;
    padding: 2px 8px;
  }
  .posts-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .posts-list li {
    margin-bottom: 6px;
    display: flex;
    align-items: center;
    gap: 8px;
  }
  .post-date {
    font-size: 13px;
    color: #39ff14bb;
    margin-right: 6px;
  }
  .post-title {
    color: #39ff14;
    font-size: 15px;
    text-decoration: none;
    font-weight: bold;
    transition: color 0.2s;
  }
  .post-title:hover {
    text-decoration: underline;
  }
  #projects-section .projects-coming {
    color: #39ff14;
    font-size: 15px;
    text-align: left;
    margin-top: 4px;
  }
  @media screen and (max-width: 900px) {
    #main-layout {
      flex-direction: column;
      gap: 24px;
      align-items: stretch;
      min-width: 0;
    }
    #left-column,
    #right-column {
      max-width: 100%;
      min-width: 0;
    }
  }
</style>
