---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/png"
      href="https://github.com/init-ikuya.png"
    />
    <meta name="generator" content={Astro.generator} />
    <title>init-ikuya's Blog</title>
  </head>
  <body>
    <Navbar />
    <div class="main-content"><slot /></div>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background: #1a1b23;
    color: #39ff14;
  }
  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
  .main-content {
    flex: 1;
  }
</style>
